{
  "name": "advancedcssflexbox",
  "version": "1.0.0",
  "description": "Flexbox container usage",
  "main": "index.js",
  
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver":"live-server",
    "start":"npm-run-all --parallel watch:sass devserver",
    
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CihatBaran/AdvancedCssFlexbox.git"
  },
  "author": "Cihat Baran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CihatBaran/AdvancedCssFlexbox/issues"
  },
  "homepage": "https://github.com/CihatBaran/AdvancedCssFlexbox#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "concat": "^1.0.3",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1"
  }
}
